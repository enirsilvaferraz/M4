<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">

        <!-- enable window content transitions -->
        <item name="android:windowContentTransitions">true</item>

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>

    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Form"></style>

    <style name="AppTheme.Form.Section">
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/ripple</item>
    </style>

    <style name="AppTheme.Form.Section.Start" parent="AppTheme.Form.Section">
        <item name="android:paddingEnd">12dp</item>
    </style>

    <style name="AppTheme.Form.Section.End" parent="AppTheme.Form.Section">
        <item name="android:paddingStart">12dp</item>
    </style>

    <style name="AppTheme.TextView" parent="Base.TextAppearance.AppCompat.Body1"></style>

    <style name="AppTheme.Form.TextView.Primary" parent="AppTheme.TextView">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="AppTheme.Form.TextView.Secundary" parent="AppTheme.TextView">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.Card">
        <item name="android:clickable">true</item>
        <item name="android:background">@drawable/ripple</item>
    </style>

    <style name="AppTheme.Card.Section" parent="AppTheme.Card">
        <item name="android:paddingBottom">16dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingStart">24dp</item>
    </style>

    <style name="AppTheme.Card.TextView.Secundary" parent="AppTheme.TextView">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AppTheme.Card.TextView.Primary" parent="AppTheme.TextView">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>
