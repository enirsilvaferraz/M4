<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="30dp"
    android:layout_height="match_parent"
    tools:background="@android:color/white">

    <View
        android:id="@+id/timeline_indicator_divider1"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_above="@+id/timeline_indicator_icon"
        android:layout_centerHorizontal="true"
        android:background="@color/dafault_color"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/timeline_indicator_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="2dp"
        android:src="@drawable/ic_fiber_manual_record_black_24dp"
        android:tint="@color/dafault_color" />

    <View
        android:id="@+id/timeline_indicator_divider2"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:layout_below="@id/timeline_indicator_icon"
        android:layout_centerHorizontal="true"
        android:background="@color/dafault_color"
        android:visibility="gone" />

</RelativeLayout>