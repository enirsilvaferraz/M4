<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.system.m4.views.components.DialogToolbar
        android:id="@+id/dialog_toolbar_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/mRecyclerPaymentType"
        android:layout_width="match_parent"
        android:layout_height="@dimen/custom_dialog_heght_recyclerview"
        android:layout_above="@+id/base_dialog_container_action"
        android:layout_below="@id/dialog_toolbar_title" />

    <com.system.m4.views.components.DialogFooter
        android:id="@+id/base_dialog_container_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />

</RelativeLayout>