<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/AppTheme.Card"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/list_item_container"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingBottom="12dp"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:paddingTop="12dp">

        <TextView
            android:id="@+id/item_transaction_payment_date"
            style="@style/AppTheme.Form.TextView.Primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="24dp"
            android:paddingStart="8dp"
            android:textColor="@color/accent"
            tools:text="10" />

        <TextView
            android:id="@+id/item_transaction_tag"
            style="@style/AppTheme.Form.TextView.Primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/item_transaction_payment_date"
            tools:text="Aluguel" />

        <TextView
            android:id="@+id/item_transaction_payment_type"
            style="@style/AppTheme.Form.TextView.Secundary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/item_transaction_tag"
            android:visibility="gone"
            tools:text="Nubank" />

        <TextView
            android:id="@+id/item_transaction_price"
            style="@style/AppTheme.Form.TextView.Secundary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/item_transaction_payment_type"
            android:layout_alignBottom="@id/item_transaction_tag"
            android:layout_alignParentEnd="true"
            android:text="R$ 1.000,00" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divider" />

</LinearLayout>