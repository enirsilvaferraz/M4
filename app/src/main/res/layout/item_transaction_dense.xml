<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="@dimen/card_horizontal_margin"
    android:layout_marginStart="@dimen/card_horizontal_margin"
    android:clickable="false"
    app:cardCornerRadius="0dp">

    <LinearLayout
        android:id="@+id/list_item_container"
        style="@style/AppTheme.Card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:background="@color/divider" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingBottom="12dp"
            android:paddingEnd="16dp"
            android:paddingStart="16dp"
            android:paddingTop="12dp">

            <TextView
                android:id="@+id/item_transaction_payment_date"
                style="@style/AppTheme.Form.TextView.Primary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingEnd="16dp"
                android:textColor="@color/accent"
                tools:text="10" />

            <TextView
                android:id="@+id/item_transaction_tag"
                style="@style/AppTheme.Form.TextView.Secundary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/item_transaction_payment_date"
                tools:text="Aluguel" />

            <TextView
                android:id="@+id/item_transaction_price"
                style="@style/AppTheme.Form.TextView.Secundary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/item_transaction_payment_type"
                android:layout_alignBottom="@id/item_transaction_tag"
                android:layout_alignParentEnd="true"
                android:text="R$ 1.000,00" />

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>