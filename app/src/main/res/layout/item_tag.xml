<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item_container"
    style="@style/AppTheme.Form.Section"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/item_list_dialog_text"
        style="@style/AppTheme.Form.TextView.Primary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/item_list_more_actions"
        tools:text="String do item" />

    <ImageButton
        android:id="@+id/item_list_more_actions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:background="?android:attr/selectableItemBackground"
        android:contentDescription="@string/system_actions_more_actions"
        android:src="@drawable/ic_more_vert_black_24dp" />

</RelativeLayout>