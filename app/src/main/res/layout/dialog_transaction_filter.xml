<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.system.m4.views.components.DialogToolbar
        android:id="@+id/dialog_toolbar_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/transaction_manager_action_tag"
                style="@style/AppTheme.Form.Section.Start"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/AppTheme.Form.TextView.Primary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/transaction_tag" />

                <TextView
                    android:id="@+id/transaction_manager_textview_tag"
                    style="@style/AppTheme.Form.TextView.Secundary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/system_empty_field"
                    tools:text="Aluguel" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/transaction_manager_action_payment_type"
                style="@style/AppTheme.Form.Section.End"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/AppTheme.Form.TextView.Primary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/transaction_payment_type" />

                <TextView
                    android:id="@+id/transaction_manager_textview_payment_type"
                    style="@style/AppTheme.Form.TextView.Secundary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/system_empty_field"
                    tools:text="Nubank" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:baselineAligned="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/transaction_manager_action_payment_date_start"
                style="@style/AppTheme.Form.Section.Start"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/AppTheme.Form.TextView.Primary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/transaction_year" />

                <TextView
                    android:id="@+id/transaction_manager_textview_payment_date_start"
                    style="@style/AppTheme.Form.TextView.Secundary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/system_empty_field"
                    tools:text="2017" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/transaction_manager_action_payment_date_end"
                style="@style/AppTheme.Form.Section.End"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    style="@style/AppTheme.Form.TextView.Primary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/transaction_month" />

                <TextView
                    android:id="@+id/transaction_manager_textview_payment_date_end"
                    style="@style/AppTheme.Form.TextView.Secundary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/system_empty_field"
                    tools:text="May" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <com.system.m4.views.components.DialogFooter
        android:id="@+id/base_dialog_container_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>