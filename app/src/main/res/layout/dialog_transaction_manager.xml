<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <com.system.m4.views.components.DialogToolbar
        android:id="@+id/dialog_toolbar_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ScrollView
        android:id="@+id/container_scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/transaction_manager_action_payment_type"
                style="@style/AppTheme.Card.Section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/AppTheme.Card.TextView.Primary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/transaction_payment_type" />

                <TextView
                    android:id="@+id/transaction_manager_textview_payment_type"
                    style="@style/AppTheme.Card.TextView.Secundary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/system_empty_field"
                    tools:text="Cartão de Crédido Nubank" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/transaction_manager_action_purchase_date"
                style="@style/AppTheme.Card.Section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/AppTheme.Card.TextView.Primary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/transaction_purchase_date" />

                <TextView
                    android:id="@+id/transaction_manager_textview_purchase_date"
                    style="@style/AppTheme.Card.TextView.Secundary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/system_empty_field"
                    tools:text="1 de março de 2017" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/transaction_manager_action_payment_date"
                style="@style/AppTheme.Card.Section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/AppTheme.Card.TextView.Primary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/transaction_payment_date" />

                <TextView
                    android:id="@+id/transaction_manager_textview_payment_date"
                    style="@style/AppTheme.Card.TextView.Secundary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/system_empty_field"
                    tools:text="25 de março de 2017" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/transaction_manager_action_price"
                style="@style/AppTheme.Card.Section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/AppTheme.Card.TextView.Primary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/transaction_price" />

                <TextView
                    android:id="@+id/transaction_manager_textview_price"
                    style="@style/AppTheme.Card.TextView.Secundary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/system_empty_field"
                    tools:text="R$ 500,00" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/transaction_manager_action_refund"
                style="@style/AppTheme.Card.Section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/AppTheme.Card.TextView.Primary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/transaction_refund" />

                <TextView
                    android:id="@+id/transaction_manager_textview_refund"
                    style="@style/AppTheme.Card.TextView.Secundary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/system_empty_field"
                    tools:text="R$ 50,00" />

            </LinearLayout>
            
            <LinearLayout
                android:id="@+id/transaction_manager_action_content"
                style="@style/AppTheme.Card.Section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/AppTheme.Card.TextView.Primary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/transaction_content" />

                <TextView
                    android:id="@+id/transaction_manager_textview_content"
                    style="@style/AppTheme.Card.TextView.Secundary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/system_empty_field"
                    tools:text="Passagem de onibus voltando do trabalho" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/transaction_manager_action_parcels"
                style="@style/AppTheme.Card.Section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/AppTheme.Card.TextView.Primary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/transaction_parcels" />

                <TextView
                    android:id="@+id/transaction_manager_textview_parcels"
                    style="@style/AppTheme.Card.TextView.Secundary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/system_empty_field"
                    tools:text="1/20" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/transaction_manager_action_already_paid"
                style="@style/AppTheme.Card.Section"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    style="@style/AppTheme.Card.TextView.Primary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/transaction_already_paid" />

                <TextView
                    android:id="@+id/transaction_manager_textview_already_paid"
                    style="@style/AppTheme.Card.TextView.Secundary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/system_empty_field"
                    tools:text="YES" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <com.system.m4.views.components.DialogFooter
        android:id="@+id/base_dialog_container_action"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>