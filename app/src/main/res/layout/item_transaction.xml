<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp">

    <LinearLayout
        android:id="@+id/list_item_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            style="@style/AppTheme.Card.Section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/item_transaction_tag"
                style="@style/AppTheme.Card.TextView.Secundary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Aluguel"
                android:textSize="28sp" />

        </LinearLayout>

        <LinearLayout
            style="@style/AppTheme.Card.Section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/label_transaction_payment_type"
                    style="@style/AppTheme.Card.TextView.Primary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/transaction_payment_type" />

                <TextView
                    android:id="@+id/label_transaction_value"
                    style="@style/AppTheme.Card.TextView.Primary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/transaction_price" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_transaction_payment_type"
                    style="@style/AppTheme.Card.TextView.Secundary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Transferência Itaú" />

                <TextView
                    android:id="@+id/item_transaction_value"
                    style="@style/AppTheme.Card.TextView.Secundary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="R$ 1000,00"
                    android:textColor="#ac1c28" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            style="@style/AppTheme.Card.Section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/label_transaction_payment_date"
                    style="@style/AppTheme.Card.TextView.Primary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/transaction_payment_date" />

                <TextView
                    android:id="@+id/label_transaction_purchase_date"
                    style="@style/AppTheme.Card.TextView.Primary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/transaction_purchase_date" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_transaction_payment_date"
                    style="@style/AppTheme.Card.TextView.Secundary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="10 de Janeiro de 2017" />

                <TextView
                    android:id="@+id/item_transaction_purchase_date"
                    style="@style/AppTheme.Card.TextView.Secundary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="10 de Janeiro de 2017" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            style="@style/AppTheme.Card.Section"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/label_transaction_payment_content"
                    style="@style/AppTheme.Card.TextView.Primary"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/transaction_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_transaction_payment_content"
                    style="@style/AppTheme.Card.TextView.Secundary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pagamento do Aluguel referente ao mes de Janeiro" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>