<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp">

    <RelativeLayout
        android:id="@+id/list_item_container"
        style="@style/AppTheme.Card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/item_transaction_tag"
            style="@style/AppTheme.Form.TextView.Primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Moradia / Aluguel" />

        <TextView
            android:id="@+id/item_transaction_payment_type"
            style="@style/AppTheme.Form.TextView.Secundary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_transaction_tag"
            android:layout_marginTop="4dp"
            android:text="Nubank" />

        <TextView
            android:id="@+id/item_transaction_payment_date"
            style="@style/AppTheme.Form.TextView.Primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="10 de Janeiro"
            android:textColor="#e7ac08" />

        <TextView
            android:id="@+id/item_transaction_price"
            style="@style/AppTheme.Form.TextView.Secundary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/item_transaction_payment_type"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/item_transaction_payment_date"
            android:text="R$ 1.000,00"
            android:textColor="#e70808" />

    </RelativeLayout>

</android.support.v7.widget.CardView>